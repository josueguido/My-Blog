---
const { Title , Contenido, Link} = Astro.props;

---

<div class="flex flex-col  items-center  my-10">
    <h1 class=" flex text-gray-500 hover:underline font-bold text-xl">
        {Title}
    </h1>
    <p class="flex text-gray-900 mt-3 text-start ">
       {Contenido}
    </p>
    <a href={Link} class="flex py-10 px-7 ">
    <p class=" w-40 h-35  font-medium text-xs block bg-black text-gray-300 text-center rounded-2xl border border-gray-400 hover:bg-cyan-500 hover:text-white transition-all duration-300"> Visitar Sitio</p> 
    </a>
</div>
